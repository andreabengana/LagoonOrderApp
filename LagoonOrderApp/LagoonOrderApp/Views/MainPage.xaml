<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LagoonOrderApp"
             x:Class="LagoonOrderApp.MainPage"
             Title="Student">

    <AbsoluteLayout VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">

        <Image AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
            Source="StudentMenuBG.png" Aspect="AspectFill"/>

        <ScrollView AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1">
            <StackLayout Orientation="Vertical" Margin="0, 300, 0, 0">
                <Button x:Name="Food"
                        Clicked="Food_Clicked"
                        Text="Food"  
                        CornerRadius="10"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand"
                        TextColor="#c5d86d"
                        BackgroundColor="White"
                        FontSize="16"
                />

                <Button x:Name="Orders"
                        Clicked="Orders_Clicked"
                        Text="Orders"  
                        CornerRadius="10"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand"
                        TextColor="#c5d86d"
                        BackgroundColor="White"
                        FontSize="16"
                />
                <Button x:Name="Stores"
                        Clicked="Stores_Clicked"
                        Text="Stores"
                        CornerRadius="10"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand"
                        TextColor="#c5d86d"
                        BackgroundColor="White"
                        FontSize="16"
                />
                <Button x:Name="About"
                        Clicked="About_Clicked"
                        Text="About"  
                        CornerRadius="10"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand"
                        TextColor="#c5d86d"
                        BackgroundColor="White"
                        FontSize="16"
                        Margin="0, 0, 0, 60"
                />
            </StackLayout>
        </ScrollView>

    </AbsoluteLayout>

